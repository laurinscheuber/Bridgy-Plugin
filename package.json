{
  "name": "bridgy",
  "version": "1.0.0",
  "description": "Figma plugin for synchronizing design tokens and components",
  "main": "code.js",
  "scripts": {
    "build": "npm run update-manifest && npm run build:ui && tsc -p tsconfig.json && npm run bundle && node build.js",
    "build:ui": "node scripts/build-ui.js",
    "build:ui:dev": "NODE_ENV=development node scripts/build-ui.js",
    "bundle": "esbuild dist/index.js --bundle --platform=browser --format=iife --outfile=code.js",
    "watch": "tsc -p tsconfig.json --watch",
    "watch:ui": "nodemon --watch src/ui -e css,js,html --exec \"npm run build:ui:dev\"",
    "dev": "npm run watch",
    "dev:ui": "npm run build:ui:dev && npm run watch:ui",
    "update-manifest": "node scripts/update-manifest.js",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write ."
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@figma/plugin-typings": "^1.82.0",
    "@vitest/coverage-v8": "^4.0.8",
    "@vitest/ui": "^4.0.7",
    "esbuild": "^0.25.5",
    "eslint": "^9.39.2",
    "globals": "^17.3.0",
    "jsdom": "^27.1.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.7.4",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.55.0",
    "vitest": "^4.0.7"
  }
}
