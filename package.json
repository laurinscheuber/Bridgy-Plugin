{
  "name": "bridgy",
  "version": "1.0.0",
  "description": "Figma plugin for synchronizing design tokens and components",
  "main": "code.js",
  "scripts": {
    "build": "tsc -p tsconfig.json && node build.js && npm run bundle",
    "bundle": "esbuild dist/index.js --bundle --platform=browser --outfile=code.js",
    "watch": "tsc -p tsconfig.json --watch",
    "dev": "npm run watch"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@figma/plugin-typings": "^1.82.0",
    "esbuild": "^0.25.5",
    "typescript": "^5.3.3"
  }
}
